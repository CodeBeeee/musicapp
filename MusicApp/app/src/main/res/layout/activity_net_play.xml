<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Activity.NetPlayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/colorWhite"
        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_navigate_before_black_24dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/musictitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="演员"
                android:gravity="bottom|left"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/musicartist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="薛之谦"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                >
                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/albumimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:src="@drawable/ic_album_black_24dp"
                    app:riv_is_circle="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                >
                <me.wcy.lrcview.LrcView
                    android:id="@+id/lrc_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lrcAnimationDuration="1000"
                    app:lrcCurrentTextColor="#3F51B5"
                    app:lrcDividerHeight="20dp"
                    app:lrcLabel="找不到歌词(@_@)"
                    app:lrcNormalTextColor="#BDBDBD"
                    app:lrcPadding="16dp"
                    app:lrcTextSize="15sp"
                    app:lrcTimeTextColor="#BDBDBD"
                    app:lrcTimelineColor="#80BDBDBD"
                    app:lrcTimelineTextColor="#9FA8DA" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            >
            <TextView
                android:id="@+id/currenttime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="111"
                android:gravity="center"
                />
            <SeekBar
                android:id="@+id/music_progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text=""
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <com.xuexiang.xui.widget.imageview.RadiusImageView
                android:id="@+id/btn_previous"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:background="@drawable/ic_skip_previous_black_24dp"
                app:riv_border_color="@color/xui_config_color_gray_6"
                app:riv_is_circle="true"
                app:riv_selected_border_color="@color/xui_config_color_gray_4"
                app:riv_selected_border_width="1px"
                app:riv_selected_mask_color="@color/xui_config_color_gray_8" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <com.xuexiang.xui.widget.imageview.RadiusImageView
                android:id="@+id/btn_play_pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_redpause_circle_outline_black_24dp"
                app:riv_border_color="@color/xui_config_color_gray_6"
                app:riv_is_circle="true"
                app:riv_selected_border_color="@color/xui_config_color_gray_4"
                app:riv_selected_border_width="1px"
                app:riv_selected_mask_color="@color/xui_config_color_gray_8" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <com.xuexiang.xui.widget.imageview.RadiusImageView
                android:id="@+id/btn_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_skip_next_black_24dp"
                app:riv_border_color="@color/xui_config_color_gray_6"
                app:riv_is_circle="true"
                app:riv_selected_border_color="@color/xui_config_color_gray_4"
                app:riv_selected_border_width="1px"
                app:riv_selected_mask_color="@color/xui_config_color_gray_8" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>